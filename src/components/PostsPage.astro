---
import AdjustText from './AdjustText.astro';
import Posts from './Posts.astro';
import Pagination from './Pagination.astro';
import { type PostSummary } from '../models/postSummary';
import { type ExternalPostSummary } from '../models/externalPostSummary';

type Props = {
  title: string;
  posts: (PostSummary | ExternalPostSummary)[];
  page: number;
  pageLength: number;
  baseUrl: string;
};

const { title, posts, page, pageLength, baseUrl } = Astro.props;
---

<>
  <h1><AdjustText text={title} /></h1>
  <Posts posts={posts} />
  <Pagination current={page} pageLength={pageLength} baseUrl={baseUrl} />
</>
