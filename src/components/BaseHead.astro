---
import GoogleSearchConsole from './GoogleSearchConsole.astro';
import GoogleAnalytics from './GoogleAnalytics.astro';
import { SITE_TITLE, SITE_URL } from '../consts';
import '../styles/global.scss';

interface Props {
  title: string;
  description: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const isProd = import.meta.env.PROD;
const { title, description } = Astro.props;
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/images/favicon.svg" />
<link rel="icon" type="image/png" href="/images/favicon.png" />
<meta name="generator" content={Astro.generator} />

{isProd && <GoogleSearchConsole />}
{isProd && <GoogleAnalytics />}

<link rel="canonical" href={canonicalURL} />
<link rel="sitemap" href="/sitemap-index.xml" />
<link rel="alternate" type="application/rss+xml" title="RSS" href="/rss.xml" />

<link
  rel="preload"
  as="style"
  fetchpriority="high"
  href="https://cdn.jsdelivr.net/gh/daiji256/daiji-blog-fonts@v0.3/css/f.min.css"
/>
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/gh/daiji256/daiji-blog-fonts@v0.3/css/f.min.css"
  media="print"
  onload="this.media='all'"
/>

<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<meta property="og:site_name" content={SITE_TITLE} />
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={`${SITE_URL}images/og-image.png`} />
<meta property="og:locale" content="ja_JP" />
<meta name="twitter:card" content="summary" />
<meta name="twitter:site" content="@Daiji256" />
<meta name="twitter:image" content={`${SITE_URL}images/twitter-image.png`} />
